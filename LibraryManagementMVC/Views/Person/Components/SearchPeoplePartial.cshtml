@using LibraryManagementLibrary.Models

@model Person

@{

    var id = Model.PersonID;

}

<tr>
    <td>
        @Html.DisplayFor(m => m.PersonID)
    </td>
    <td>
        @Html.DisplayFor(m => m.FirstName)
    </td>
    <td>
        @Html.DisplayFor(m => m.LastName)
    </td>
    <td>
        <a asp-controller="Person" asp-action="PersonViewInfo" asp-route-id="@id">View</a>
    </td>
</tr>