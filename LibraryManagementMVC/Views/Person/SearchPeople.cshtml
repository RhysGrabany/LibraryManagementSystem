
@model SearchPeopleModel

@{
    ViewData["Title"] = "Search People";

    var SearchedPerson = Model.Person;
}


<div>

    @using (Html.BeginForm())
    {
        @Html.TextBoxFor(model => model.SearchTerm)


        <input type="submit" value="Search" class="btn btn-default" />
    }

    @{
        var People = Model.People;
        if (People != null)
        {
            @using (Html.BeginForm())
            {
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Person.PersonID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Person.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Person.LastName)
                        </th>
                        @*<th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>*@
                    </tr>
                    @foreach (var person in People)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => person.PersonID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => person.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => person.LastName)
                            </td>

                            @*<td>@person.PersonID</td>
                                <td>@person.FirstName</td>
                                <td>@person.LastName</td>*@
                            <td>
                                <a asp-action="PersonViewInfo" asp-route-id="@person.PersonID">View</a>
                                </td>
                            @*<td>
                                <button>
                                    @Html.ActionLink("View", "PersonViewInfo", "Person", new { id = person.PersonID }, null)
                                </button>
                            </td>*@


                        </tr>
                    }
                </table>
            }}
    }









</div>